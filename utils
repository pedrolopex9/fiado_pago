package fiadopago;

import java.text.DecimalFormat;
import java.text.DecimalFormatSymbols;
import java.text.NumberFormat;
import java.util.Locale;

public class utils {

    static NumberFormat numberFormat = new DecimalFormat("R$ #,##0.00", new DecimalFormatSymbols(new Locale("pt", "BR")));

    public static String doubleToString(double value) {
        return numberFormat.format(value);
    }

    public static String doubleToString(String value) {
        try {
            double doubleValue = Double.parseDouble(value);
            return numberFormat.format(doubleValue);
        } catch (NumberFormatException e) {
            // Trate o erro de conversão da String para double, se necessário.
            return "Erro na conversão";
        }
    }
}
